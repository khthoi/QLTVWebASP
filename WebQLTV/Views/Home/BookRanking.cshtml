@model List<WebQLTV.Models.Book>

@{
    ViewData["Title"] = "Bảng xếp hạng sách";
}

<div class="container py-5">
    <h2 class="text-center mb-4 fw-bold text-primary">Bảng Xếp Hạng Sách</h2>
    <p class="text-center text-muted mb-5">Top 10 Sách Được Mượn Nhiều Nhất</p>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped m-0">
                    <thead class="table-dark bg-gradient">
                        <tr>
                            <th class="px-4 py-3" style="width: 80px;">STT</th>
                            <th class="px-4 py-3">Tên sách</th>
                            <th class="px-4 py-3" style="width: 150px;">Số lần mượn</th>
                            <th class="px-4 py-3">Tác giả</th>
                            <th class="px-4 py-3">Loại sách</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            int index = 1;
                            foreach (var book in Model)
                            {
                                <tr class="align-middle">
                                    <td class="px-4 text-center">@index</td>
                                    <td class="px-4 fw-medium">@book.Title</td>
                                    <td class="px-4 text-center">
                                        <span class="badge bg-success rounded-pill">@book.TotalBorrow</span>
                                    </td>
                                    <td class="px-4">@(book.Author?.AuthorName ?? "Không rõ")</td>
                                    <td class="px-4">@(book.Type?.TypeName ?? "Không phân loại")</td>
                                </tr>
                                index++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-4 text-muted">
                                    <i class="bi bi-book me-2"></i>
                                    Không có sách nào trong danh sách xếp hạng
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .table th {
        vertical-align: middle;
    }

    .table td {
        transition: background-color 0.2s;
    }

    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
    }

    .text-primary {
        color: #0d6efd !important;
    }
</style>